#!/bin/bash

pushdir() {
	pushd $* > /dev/null
}

popdir() {
	popd $* > /dev/null
}

for pom in `find . -name "pom.xml"`; do
	pushdir `dirname $pom`
		SVN_URL=`svn info 2> /dev/null|grep "^URL: "|sed "s/^URL: //"`
		if [ "${SVN_URL}" != "" ]; then
			if [ "${SVN_URL: -6}" == "/trunk" ]; then
				echo "${pom}"
			fi
		fi
	popdir
done

